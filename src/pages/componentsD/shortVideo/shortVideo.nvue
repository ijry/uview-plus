				});
			},
			onShare({ item, index }) {
				console.log('分享视频:', index);
				uni.showToast({
					title: '分享功能',
					icon: 'none'
				});
			},
			onCollect({ item, index }) {
				console.log('收藏视频:', index);
				// 更新收藏状态和数量
				this.videoList[index].isCollected = !this.videoList[index].isCollected;
				this.videoList[index].collectCount += this.videoList[index].isCollected ? 1 : -1;
